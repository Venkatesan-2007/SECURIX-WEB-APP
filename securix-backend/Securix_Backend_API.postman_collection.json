        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set(\"token\", jsonData.token);",
                  "  pm.test(\"Token saved to environment\", function () {",
                  "    pm.expect(jsonData.token).to.exist;",
                  "  });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"securix123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "admin",
                "login"
              ]
            }
          },
          "response": []
        }
      ]
